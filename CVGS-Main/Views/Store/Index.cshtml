@model IEnumerable<CVGS_Main.Models.CvgsGame>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Search for Games</h1> <br />

<form asp-action="Index" method="get" class="row g-3">
  <div class="col-auto">
    <input type="text" class="form-control" name="searchQuery" value="@ViewData["searchQuery"]" placeholder="Enter keywords...">
  </div>
  <div class="col-auto">
    <input type="submit" value="Search" class="btn btn-primary mb-3" />
  </div>
</form>

@Html.Raw(@TempData["AddItemToCartSuccess"])

<hr />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Publisher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Developer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OverallScore)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Publisher.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Developer.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OverallScore)
            </td>
            <td>
                <a asp-action="AddToCart" asp-controller="Cart" asp-route-id="@item.GameId">Add to Cart</a> | 
                <a asp-action="Details" asp-route-id="@item.GameId">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
<a asp-action="Index">Go back</a>
