@model IEnumerable<CVGS_Main.Models.CvgsFriend>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Friend List</h1>

<p>
    <a asp-action="Create">Add Friend</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Username
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FriendToAdd)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FriendListId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FriendListId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FriendListId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
